@model IEnumerable<Chapter6Example1.Models.Course>

<p> <a asp-action="AddCourse">Add Course</a> </p>

@{
    if (Model.Count() < 1)
    {
        <p>No course in database yet.</p>
    }
    else
    {
        <h3>All Courses</h3>
        <table border="1">
            <tr>
                <th>Course ID</th>
                <th>Course Title</th>
                <th>Seat Capacity</th>
                <th>Instructor Name</th>
            </tr>
            @foreach (var course in Model)
            {
                <tr>
                    <td><a asp-controller="Student" asp-action="EnrollCourse"
                           asp-route-id="@course.CourseID">
                            @course.CourseID
                        </a>
                    </td>
                    <td>@course.CourseTitle</td>
                    <td><a asp-controller="Student" asp-action="AllClassmate" asp-route-id="@course.CourseID">
                    @course.seatCapacity</a>
                    </td>  
                    <td><a asp-controller="Instructor" asp-action="InstuctorDetails" asp-route-id="@course.Instructor.InstructorId">
                            @course.Instructor.InstructorName
                        </a>
                    </td>
                </tr>
            }
        </table>
    }
}
