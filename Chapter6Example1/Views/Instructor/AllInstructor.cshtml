@model IEnumerable<Chapter6Example1.Models.Instructor>

<p> <a asp-action="AddInstructor">Add Instructor</a> </p> 

    @{
        if(Model.Count()<1)
        {
            <p>No instructor in database yet.</p>
        }
        else
        {
            <h3>All Instructors</h3>
            <table border="1">
            <tr>
            <th>Instructor ID</th>
            <th>Instructor Name</th>
            </tr>
            @foreach (var instructor in Model)
                {
                    <tr>
                    <td>@instructor.InstructorId</td>
                    <td>@instructor.InstructorName</td>
                    </tr>
                }
            </table>
        }
    }
